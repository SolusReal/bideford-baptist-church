aside
  .sidepanel-header
    a.navbar-brand(href="#") Bideford Baptist Church
    button.toggleNav.fa-solid.fa-bars
  nav.navbar
    label.searchbar
      .icon.fa-solid.fa-magnifying-glass
      input(type="text" placeholder="Search...")
    ul.mainmenu
      each link in menuLinks
        - const hasSub = link.submenu ? 'has-submenu' : ''
        li(class=hasSub)
          a(href=link.link)
            i.fa-solid(class=`fa-${link.icon}`)
            span #{link.name}
          if link.submenu
            ul.submenu
              each sublink in link.submenu
                li
                  a(href=sublink.link) #{sublink.name}
    a.bottom-link(href="contact-us.html") Contact Us
