extends layout/_base.pug

block title
  title Bideford Baptist Church | Contact us

block content
  .contact-us
    main
      .randombox.contact
        .boxtitle Contact Us
        .textContent
          form.contact-form(action="#" method="post")
            label(for="name") Name (So we can address you.)
            input#name(type="text" placeholder="Your Name" required)
            
            label(for="email") Email (So we can reply to your message.)
            input#email(type="email" placeholder="you@example.com" required)
            
            label(for="message") Message
            textarea#message(placeholder="Your message..." required)
            
            button(type="submit") Send Message
      .emailaddresses if you would like to contact anyone in particular we have the Minister - Adrian Lloyd's email: revpal56@gmail.com, or the Secretary - Pamela Rowland's email: pamelarowland28@gmail.com